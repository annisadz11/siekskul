@model siekskul.ViewModels.LoginViewModel
@{
    Layout = "_AuthLayout";
}
@{
    ViewData["Title"] = "Login";
}
<body>
    <!-- Container start -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-4 col-lg-5 col-sm-6 col-12">
                <form asp-action="Login" asp-controller="Auth" method="post">
                    <div class="border border-dark rounded-2 p-4 mt-5">
                        <div class="login-form">
                            <a href="index.html" class="mb-9 d-flex">
								<img src="~/assets/images/sistem informasi ekstrakurikuler.png" class="img-fluid login-logo" alt="Nyke Admin" />
                            </a>
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label"></label>
                                <input asp-for="Username" class="form-control" placeholder="Masukkan username Anda" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label"></label>
                                <input asp-for="Password" class="form-control" placeholder="Masukkan password Anda" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>                            
                            <div class="d-grid py-3 mt-4">
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>

                            <div class="text-center pt-4">
                                <span>Belum punya Akun?</span>
                                <a asp-action="Register" asp-controller="Auth" class="btn btn-secondary">Register</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Container end -->
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

