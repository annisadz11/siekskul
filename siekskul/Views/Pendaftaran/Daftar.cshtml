@model siekskul.Models.Ekstrakurikuler

<h2>Daftar Ekstrakurikuler</h2>

<h3>@Model.Nama</h3>
<p>@Model.Deskripsi</p>

<form asp-action="DaftarConfirm" asp-route-id="@Model.EkstrakurikulerId" method="post">
    <p>Apakah Anda yakin ingin mendaftar untuk ekstrakurikuler ini?</p>
    <button type="submit" class="btn btn-primary">Konfirmasi Pendaftaran</button>
    <a asp-controller="Ekstrakurikuler" asp-action="ListForSiswa" class="btn btn-secondary">Batal</a>
</form>