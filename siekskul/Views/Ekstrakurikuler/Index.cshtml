@model IEnumerable<siekskul.Models.Ekstrakurikuler>

<h2>Daftar Ekstrakurikuler</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Tambah Ekstrakurikuler Baru</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Deskripsi</th>
            <th>Pembimbing</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nama</td>
                <td>@item.Deskripsi</td>
                <td>@item.Guru?.User?.FullName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EkstrakurikulerId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.EkstrakurikulerId" class="btn btn-sm btn-info">Detail</a>
                    <a asp-action="Delete" asp-route-id="@item.EkstrakurikulerId" class="btn btn-sm btn-danger">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>