@model IEnumerable<siekskul.Models.Ekstrakurikuler>

@{
    ViewData["Title"] = "List Ekstrakurikuler";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">List Ekstrakurikuler</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Nama</th>
                                    <th>Deskripsi</th>
                                    <th>Pembimbing</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Nama</td>
                                        <td>@item.Deskripsi</td>
                                        <td>@item.Guru.User.FullName</td>
                                        <td>
                                            <a asp-controller="Pendaftaran" asp-action="Daftar" asp-route-id="@item.EkstrakurikulerId" class="btn btn-primary btn-sm">Daftar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>