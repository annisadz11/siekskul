@model IEnumerable<siekskul.Models.PendaftaranEkstrakurikuler>

<h2>Daftar Pendaftaran Ekstrakurikuler</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nama Siswa</th>
            <th>Ekstrakurikuler</th>
            <th>Tanggal Pendaftaran</th>
            <th>Status</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Siswa.User.FullName</td>
                <td>@item.Ekstrakurikuler.Nama</td>
                <td>@item.TanggalPendaftaran.ToShortDateString()</td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == StatusPendaftaran.Menunggu)
                    {
                        <form asp-action="UpdateStatus" asp-route-id="@item.PendaftaranId" method="post">
                            <button type="submit" name="status" value="Diterima" class="btn btn-sm btn-success">Terima</button>
                            <button type="submit" name="status" value="Ditolak" class="btn btn-sm btn-danger">Tolak</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>